/* login.wxss */
.box{ text-align:center;}
.box .box_close{height:20px; width:20px; position:absolute; top:29px; right:15px;}
.box .box_nggirl{ margin:35px 0 30px 0; width:220px; }
.box .box_nggirl_title{ color:#fff; font-size:18px; text-indent:3px; letter-spacing:5px; margin:0 0 35px 0;}
.box_input{ width:100%; padding:0 25px; box-sizing:border-box; position:relative;}
.box_input input{ display:block; width:100%; height:50px;}
.box_input .tel{ border-radius:5px 5px 0 0 ; border:1px solid #50c8b4; padding:0 0 0 50px; box-sizing:border-box; color:#4c4c4c;outline:none; text-align:left;}
.box_input .pwd{border:1px solid #50c8b4; border-top:none; border-radius:0 0 5px 5px; padding:0 0 0 50px; box-sizing:border-box; color:#4c4c4c; outline:none; text-align:left;}
.box_input .tel_del{ position:absolute; top:20px; width:15px; right:35px; display:none;}
.box_input .pwd_del{ position:absolute; top:68px; width:15px; right:60px; display:none;}
.eyes{z-index:2;height:8px; position:absolute; top:63px; right:28px; width:15px; padding: 10px;}
.login_btn{ width:100%; padding:0 25px; box-sizing:border-box; height:45px; text-align:center; line-height:45px; color:#fff; margin:0 auto;}
.btn_ok{ width:100%; height:45px; background:#b3b3b3; border-radius:5px; margin:10px 0 0 0; font-size:18px; letter-spacing:5px;}
.lb_register{ float:left; text-decoration:underline; font-size:15px;}
.lb_login{ float:right; text-decoration:underline; font-size:16px;}
.another_login{ text-align:center; clear:both; color:#9a9a9a; font-size:14px; margin:20px 0;}
.lb_weixin{ width:130px;height:40px;}
.lb_weibo{ width:130px; float:right; margin-bottom: 10px;}
.btn{ overflow:hidden; color:#9a9a9a;}
.weixin{ display:block; width:100%; overflow:hidden; text-align:center;}
.box_p{ color:#3a3a3a; font-size:18px; margin:10px 0 0 0;}
.image_pwd{width:20px;height:20px;position:absolute;left:45px;top:64px;}
.image_user{width:20px;height:20px;position:absolute;left:45px;top:14px;}
